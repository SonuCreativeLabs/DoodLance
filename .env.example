
# Add these to your .env.local file:

# Database (Prisma + MongoDB)
DATABASE_URL="mongodb+srv://your_connection_string"

# Authentication
NEXTAUTH_URL="http://localhost:3000"
NEXTAUTH_SECRET="your_secret_key"

# WorkOS AuthKit (for OTP and MFA)
# Get your keys from: https://dashboard.workos.com
# MFA Setup: Enable MFA in Dashboard → Authentication → Multi-Factor Authentication
# SMS Provider: Configure Twilio, AWS SNS, or use WorkOS built-in provider
WORKOS_CLIENT_ID="your_workos_client_id"
WORKOS_API_KEY="your_workos_api_key"
WORKOS_REDIRECT_URI="http://localhost:3000/auth/callback"

# Email Configuration (for Email OTP)
# Gmail: Use App Password from https://myaccount.google.com/apppasswords
# Other providers: SendGrid, AWS SES, etc.
SMTP_HOST="smtp.gmail.com"
SMTP_PORT="587"
SMTP_SECURE="false"
SMTP_USER="your-email@gmail.com"
SMTP_PASS="your-app-password"
SMTP_FROM="DoodLance <noreply@yourdomain.com>"

# Sentry Error Tracking
NEXT_PUBLIC_SENTRY_DSN="https://your-dsn@sentry.io/your-project-id"
SENTRY_ORG="your-org-name"
SENTRY_PROJECT="your-project-name"
SENTRY_AUTH_TOKEN="your-auth-token"
SENTRY_DEBUG="false"

# Maps (optional)
NEXT_PUBLIC_MAPBOX_TOKEN="your_mapbox_token"

